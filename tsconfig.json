{
    "compilerOptions": {
        "module": "nodenext",
        "esModuleInterop": true,
        "target": "ES2020",
        "moduleResolution": "nodenext",
        "allowSyntheticDefaultImports": true,
        "allowImportingTsExtensions": true,
        "rewriteRelativeImportExtensions": true,
        "noEmit": false,
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "dist",
        "baseUrl": "./src",
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"],
}